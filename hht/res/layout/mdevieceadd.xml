<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbarStyle="outsideInset" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/daminfo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/modifymessage"
                android:textSize="20sp" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_madevnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dip"
                    android:gravity="center_vertical|right"
                    android:text="@string/devnum"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_tv_madevnum"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dip"
                    android:layout_marginTop="5dip"
                    android:layout_toRightOf="@+id/tv_madevnum"
                    android:hint="@string/in_devnum"
                    android:textColor="#606060"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_asperson"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dip"
                    android:gravity="center_vertical|right"
                    android:text="@string/sendperson"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_tv_asperson"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dip"
                    android:layout_marginTop="5dip"
                    android:layout_toRightOf="@+id/tv_asperson"
                    android:hint="@string/in_sperson"
                    android:textColor="#606060"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_arperson"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dip"
                    android:gravity="center_vertical|right"
                    android:text="@string/recperson"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_tv_arperson"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dip"
                    android:layout_marginTop="5dip"
                    android:layout_toRightOf="@id/tv_arperson"
                    android:hint="@string/in_rperson"
                    android:textColor="#606060"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_amtimes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dip"
                    android:gravity="center_vertical|right"
                    android:text="@string/mtimes"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_tv_amtimes"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dip"
                    android:layout_marginTop="5dip"
                    android:layout_toRightOf="@+id/tv_amtimes"
                    android:hint="@string/in_mtimes"
                    android:textColor="#606060"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_amlevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dip"
                    android:gravity="center_vertical|right"
                    android:text="@string/prelever"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_tv_amlevel"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dip"
                    android:layout_marginTop="5dip"
                    android:layout_toRightOf="@+id/tv_amlevel"
                    android:hint="@string/in_mlevel"
                    android:textColor="#606060"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_aconsume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dip"
                    android:gravity="center_vertical|right"
                    android:text="@string/consume"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_tv_aconsume"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dip"
                    android:layout_marginTop="5dip"
                    android:layout_toRightOf="@+id/tv_aconsume"
                    android:hint="@string/in_confume"
                    android:textColor="#606060"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_afinishdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dip"
                    android:gravity="center_vertical|right"
                    android:text="@string/finishdate"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_tv_afinishdate"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dip"
                    android:layout_marginTop="5dip"
                    android:layout_toRightOf="@+id/tv_afinishdate"
                    android:hint="@string/in_finishdate"
                    android:textColor="#606060"
                    android:textSize="16sp" />
            </RelativeLayout>

            <!-- faultcause -->


            <!--
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

            </RelativeLayout>
            -->
            
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dip"
                    android:gravity="center_vertical|right"
                    android:text="@string/display"
                    android:textSize="18sp" >
                </TextView>

                <EditText
                    android:id="@+id/et_display"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dip"
                    android:layout_marginTop="5dip"
                    android:layout_toRightOf="@+id/display"
                    android:hint="@string/in_faultdisplay"
                    android:inputType="none"
                    android:textColor="#606060"
                    android:textSize="16sp"/>
            </RelativeLayout>


            <!-- fixed method -->            
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/fixedmethod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dip"
                    android:gravity="center_vertical|right"
                    android:text="@string/sloved_method1"
                    android:textSize="18sp" >
                </TextView>

                <EditText
                    android:id="@+id/et_fixedmethod"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dip"
                    android:layout_marginTop="5dip"
                    android:layout_toRightOf="@+id/fixedmethod"
                    android:hint="@string/in_resolve"
                    android:inputType="none"
                    android:textColor="#606060"
                    android:textSize="16sp"/>
            </RelativeLayout>
           


