<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/basedeviceinfo"></include>

    <!-- 报修人姓名 --> 
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/reporter"
            android:layout_width="wrap_content"
            android:layout_height="50dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dip"
            android:gravity="center_vertical|right"
            android:text="报修人"
            android:textColor="@android:color/black"
            android:textSize="14sp"></TextView>

        <EditText
            android:id="@+id/edit_reporter"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dip"
            android:layout_marginTop="5dip"
            android:layout_toRightOf="@+id/reporter"
            android:textSize="14sp"></EditText>
    </RelativeLayout>
    <!-- 维修人姓名 -->
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/fixer"
            android:layout_width="wrap_content"
            android:layout_height="50dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dip"
            android:gravity="center_vertical|right"
            android:text="维修人"
            android:textColor="@android:color/black"
            android:textSize="14sp"></TextView>

        <EditText
            android:id="@+id/edit_fixer"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dip"
            android:layout_marginTop="5dip"
            android:layout_toRightOf="@+id/fixer"
            android:textSize="14sp"></EditText>
    </RelativeLayout>
    <TextView
        android:id="@+id/problem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dip"
        android:text="@string/fault_cause"
        android:textColor="@color/red"
        android:textSize="18sp"></TextView>

    <TextView
        android:id="@+id/solvedmethod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="16sp"></TextView>

    <TextView
        android:id="@+id/dinfo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:gravity="center"
        android:text="@string/update_fault"
        android:textColor="@color/green"
        android:textSize="18sp" />

    <ListView
        android:id="@+id/method_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawSelectorOnTop="false"
        android:scrollbars="vertical" />

